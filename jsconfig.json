{
  "compilerOptions": {
    "typeRoots": ["node_modules/@types", "src/types"],
    "types": ["retry"],
    "baseUrl": "src",
    "paths": {
      "components/*": ["components/*"],
      "assets/*": ["assets/*"],
      "utils/*": ["utils/*"],
      "layouts/*": ["layouts/*"],
      "pages/*": ["pages/*"],
      "api/*": ["api/*"],
      "routes/*": ["routes/*"],
      "context/*": ["context/*"]
    }
  },
  "include": ["src"]
}
